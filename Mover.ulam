/**
   \color #0ff
 */
element Mover: QBondableT(1u) {
  typedef C2D.Dir Dir;

  constant QBond.Index cCOMMON = 0u;

  Dir mDir = 6u; // west

  Void setDir(C2D.Dir dir) {
    mDir = dir;
  }

  @Override Void behave() {
    EventWindow ew;
    SwapHelper sh;
    C2D coord;
    for (Unsigned i = 0u; i < 3u; i++) {
      coord = coord.neighbor(mDir);
      if (sh.swap(0u, ew.getSiteNumber(coord)))
        return;
    }
  }
}
